{
  "compilerOptions": {
    "module": "ESNext",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "declaration": true,
    "target": "ES2020",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true
  },
  "include": ["./src/**/*", "ts/index.ts", "ts/commands.ts"],
  "exclude": ["./src/**/*.spec.ts"]
}
